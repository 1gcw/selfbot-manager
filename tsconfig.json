{
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "build",
    "rootDir": "src",
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
    }
  }
}